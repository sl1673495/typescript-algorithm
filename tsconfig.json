{
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "./dist",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "type": ["type"],
      "util": ["util"],
    },
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true
  }
}
